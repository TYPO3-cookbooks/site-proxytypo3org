server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name <%= Array(@server_name).join(' ') %>;

  ssl on;

<%= nginx_conf_options(@options, 1) %>
<% unless @type == :static %><%= nginx_conf_options(@locations, 1, 'locations') %><% end %>
}

server {
  listen 80;
  listen [::]:80;
  server_name <%= Array(@server_name).join(' ') %>;
  return 301 https://$host$request_uri;
}
